<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".activities.MainActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextDepart"
        android:hint="Départ"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/location_icon"
        android:layout_alignLeft="@+id/editTextArrive"
        android:layout_alignStart="@+id/editTextArrive" />

    <ImageView
        android:padding="5dp"
        android:id="@+id/location_icon"
        android:src="@drawable/location"
        android:layout_width="35dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/editTextDepart"
        android:layout_toEndOf="@+id/buttonGo"
        android:layout_above="@+id/editTextArrive" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextArrive"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:hint="Arrivée"
        android:layout_below="@+id/editTextDepart"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GO !"
        android:id="@+id/buttonGo"
        android:layout_below="@+id/editTextArrive"
        android:layout_marginTop="44dp"
        android:layout_alignEnd="@+id/editTextArrive"
        android:layout_alignStart="@+id/editTextArrive"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="#0277BD"
        android:textColor="#ffffff"
        android:textSize="25dp" />



</RelativeLayout>
