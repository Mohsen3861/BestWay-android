<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:id="@+id/imageViewIcon"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_margin="15dp"
        android:src="@drawable/car" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="25 mn"
        android:fontFamily="sans-serif-light"
        android:id="@+id/textViewTemps"
        android:layout_alignBottom="@+id/imageViewIcon"
        android:layout_alignTop="@+id/imageViewIcon"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textViewType"
        android:layout_marginRight="30dp"
        android:gravity="center|right"
        android:textSize="20dp"
        android:layout_toRightOf="@+id/textViewType" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/textViewType"
        android:layout_alignTop="@+id/textViewTemps"
        android:layout_toRightOf="@+id/imageViewIcon"
        android:layout_toEndOf="@+id/imageViewIcon"
        android:textColor="@color/abc_primary_text_material_light"
        android:textSize="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/textViewLines"
        android:textColor="@color/abc_primary_text_material_light"
        android:layout_below="@+id/textViewType"
        android:layout_alignLeft="@+id/textViewType"
        android:layout_alignStart="@+id/textViewType"
        android:textSize="10dp"
        android:layout_marginTop="5dp"
        android:text="        " />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/textViewInfo"
        android:textColor="@color/primary_dark_material_light"
        android:textSize="10dp"
        android:layout_below="@+id/textViewTemps"
        android:layout_alignLeft="@+id/imageViewIcon"
        android:layout_alignStart="@+id/imageViewIcon"
        android:layout_alignRight="@+id/textViewTemps"
        android:layout_alignEnd="@+id/textViewTemps"
        android:textStyle="italic"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp" />
</RelativeLayout>