<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="25dp"
    android:paddingLeft="35dp"
    android:paddingRight="35dp"
    android:paddingTop="50dp"
    tools:context="com.esgi.ecole.bestway.activities.InscriptionActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextEmail"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:hint="Email"
        android:inputType="textWebEmailAddress" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextMdp"
        android:layout_below="@+id/editTextEmail"
        android:layout_alignRight="@+id/editTextEmail"
        android:layout_alignEnd="@+id/editTextEmail"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Mot de passe"
        android:inputType="textPassword"
        android:layout_marginTop="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Valider"
        android:id="@+id/buttonValider"
        android:layout_below="@+id/editTextMdp"
        android:background="#558B2F"
        android:textColor="#ffffff"
        android:layout_marginTop="40dp"
        android:layout_alignRight="@+id/editTextMdp"
        android:layout_alignEnd="@+id/editTextMdp"
        android:layout_alignLeft="@+id/editTextMdp"
        android:layout_alignStart="@+id/editTextMdp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp" />
</RelativeLayout>
